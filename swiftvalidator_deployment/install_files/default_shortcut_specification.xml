    <skipIfNotSupported />
    <programGroup defaultName="SwiftValidator" location="startMenu" />
    <shortcut 
        os="windows" 
        name="SwiftValidator" 
        target="$INSTALL_PATH\bin\run.bat" 
        commandLine="&quot;$INSTALL_PATH/bin/run.bat&quot;"
        workingDirectory="$INSTALL_PATH" 
        description="Run SwiftValidator" 
        iconFile="$INSTALL_PATH\bin\swiftvalidator.ico"
        initialState="noShow" 
        programGroup="yes" 
        desktop="no" 
        applications="no" 
        startMenu="no" 
        startup="no">
        <createForPack name="bin" />
    </shortcut>
